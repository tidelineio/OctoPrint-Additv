{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "OctoPrint with Browser",
            "configurations": ["OctoPrint: Debug Plugin"],
            "preLaunchTask": "open-browser"
        }
    ],
    "configurations": [
        {
            "name": "OctoPrint: Debug Plugin",
            "type": "debugpy",
            "request": "launch",
            "module": "octoprint",
            "args": [
                "serve",
                "--port=5000",
                "--host=127.0.0.1"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "OCTOPRINT_HOST": "127.0.0.1",
                "FLASK_SERVER_NAME": "127.0.0.1:5000",
                "SERVER_NAME": "127.0.0.1:5000"
            },
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Serving Flask app",
                "uriFormat": "http://127.0.0.1:5000",
                "action": "openExternally"
            }
        }
    ]
}
