{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "OctoPrint: Debug Plugin",
            "type": "python",
            "request": "launch",
            "module": "octoprint",
            "args": [
                "serve",
                "--port=5000",
                "--host=0.0.0.0"
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "OCTOPRINT_HOST": "0.0.0.0"
            },
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "OctoPrint started up",
                "uriFormat": "http://localhost:5000",
                "action": "openExternally"
            }
        }
    ]
}
